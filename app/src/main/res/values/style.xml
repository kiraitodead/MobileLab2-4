<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name = "titleTextStyle">
        <item name = "android:layout_width">match_parent</item>
        <item name = "android:layout_height">wrap_content</item>
        <item name = "android:layout_marginTop">10dp</item>
        <item name = "android:background">@drawable/corners</item>
        <item name = "android:elevation">5dp</item>
        <item name = "android:gravity">center_horizontal</item>
        <item name = "android:textColor">@color/white</item>
        <item name = "android:textSize">30dp</item>
    </style>

    <style name = "commonTextStyle">
        <item name = "android:layout_width">match_parent</item>
        <item name = "android:layout_height">wrap_content</item>
        <item name = "android:layout_marginTop">10dp</item>
        <item name = "android:background">@drawable/corners</item>
        <item name = "android:elevation">5dp</item>
        <item name = "android:textColor">@color/white</item>
        <item name = "android:textSize">25dp</item>
        <item name = "android:fontFamily">sans-serif-light</item>
        <item name = "android:padding">5dp</item>
    </style>

    <style name = "itemImageStyle">
        <item name = "android:layout_width">90dp</item>
        <item name = "android:layout_height">90dp</item>
        <item name = "android:background">@drawable/corners</item>
    </style>

    <style name = "itemLinearLayoutStyle">
        <item name = "android:layout_width">match_parent</item>
        <item name = "android:layout_height">wrap_content</item>
        <item name = "android:layout_marginTop">15dp</item>
        <item name = "android:layout_marginLeft">10dp</item>
        <item name = "android:layout_marginRight">10dp</item>
        <item name = "android:padding">15dp</item>
        <item name = "android:elevation">3dp</item>
        <item name = "android:background">@drawable/corners</item>
    </style>

    <style name = "itemCardViewStyle">
        <item name = "android:layout_width">wrap_content</item>
        <item name = "android:layout_height">wrap_content</item>
        <item name = "cardCornerRadius">5dp</item>
        <item name = "cardBackgroundColor">@color/cardBackgrnd</item>
    </style>

    <style name = "itemTextStyle">
        <item name = "android:layout_width">wrap_content</item>
        <item name = "android:layout_height">match_parent</item>
        <item name = "android:background">@drawable/corners</item>
        <item name = "android:paddingLeft">20dp</item>
        <item name = "android:gravity">center_vertical</item>
        <item name = "android:textColor">@color/white</item>
        <item name = "android:textSize">25dp</item>
        <item name = "android:fontFamily">sans-serif-light</item>
    </style>

    <style name = "contentLinearLayoutStyle">
        <item name = "android:layout_width">match_parent</item>
        <item name = "android:layout_height">match_parent</item>
        <item name = "android:orientation">vertical</item>
        <item name = "android:background">@color/backgrnd</item>
    </style>

    <style name = "contentCardViewStyle">
        <item name = "android:layout_width">wrap_content</item>
        <item name = "android:layout_height">300dp</item>
        <item name = "cardCornerRadius">5dp</item>
        <item name = "android:layout_marginTop">10dp</item>
        <item name = "android:layout_marginBottom">10dp</item>
        <item name = "android:gravity">center</item>
        <item name = "cardBackgroundColor">@color/cardBackgrnd</item>
    </style>

    <style name = "contentImageStyle">
        <item name = "android:layout_width">match_parent</item>
        <item name = "android:layout_height">match_parent</item>
        <item name = "android:background">@drawable/corners</item>
        <item name = "android:scaleType">center</item>
        <item name = "android:elevation">5dp</item>
    </style>

</resources>